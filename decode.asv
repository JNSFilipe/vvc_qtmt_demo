end

command = exec + ...
    "-d 8 " + ...
    bin_path + ...
    "-o ./recs/ShakeNDry_640x360_120fps_420_8bit_YUV_qp_37_mtt.yuv " + ...
    '--TraceRule="D_QP:poc==0" ' + ...
    '--TraceFile="./logs/ShakeNDry_640x360_120fps_420_8bit_YUV_qp_37_qt.csv"';

disp(command)
system(command);